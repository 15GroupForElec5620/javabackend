<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.virtualschool.dao.AssignmentMapper">


    <insert id="addAssignment" keyProperty="id">
        insert into assignment (title)
        values (#{title})
    </insert>
    <insert id="uploadFile">
        insert into file(id,user_id,url,content_type, file_name, assignment_id)
        values (null, #{userId},#{url1}, #{contentType}, #{fileName}, #{assignmentId})
    </insert>
    <insert id="insertMark">
        insert into score
        values (#{userId}, #{score})
    </insert>
    <delete id="deleteAssignment">
        delete from assignment
        where  id = #{id}
    </delete>
    <select id="searchAssignment" resultType="assignment">
        select * from assignment
    </select>
    <select id="selectFile" resultType="com.edu.virtualschool.entity.File">
        select * from file
        where assignment_id != null
    </select>
    <select id="selectMark" resultType="com.edu.virtualschool.entity.Score">
        select score from score
        where user_id = #{userId} and assignment_id = #{assignmentId}
    </select>
</mapper>